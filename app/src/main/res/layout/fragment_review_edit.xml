<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.Demo.BottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".review.ui.ReviewEditFragment">

    <View
        android:id="@+id/view_review_top"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginHorizontal="160dp"
        android:layout_marginTop="8dp"
        android:background="@color/gray1"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linear_review_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/view_review_top">

        <ImageView
            android:id="@+id/img_review_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_review_edit" />

        <TextView
            android:id="@+id/txt_review_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/notosanskr"
            android:includeFontPadding="false"
            android:text="수정하기"
            android:textColor="@color/gray3"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:id="@+id/view_review_seperator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray0"
        app:layout_constraintTop_toBottomOf="@id/linear_review_edit" />

    <LinearLayout
        android:id="@+id/linear_review_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/view_review_seperator">

        <ImageView
            android:id="@+id/img_review_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_review_delete" />

        <TextView
            android:id="@+id/txt_review_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/notosanskr"
            android:includeFontPadding="false"
            android:text="삭제하기"
            android:textColor="@color/gray3"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>