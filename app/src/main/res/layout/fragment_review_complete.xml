<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".review.ui.ReviewCompleteFragment">

    <ImageView
        android:id="@+id/img_review_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_complete_enough" />

    <TextView
        android:id="@+id/txt_reivew_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/notosanskr"
        android:includeFontPadding="false"
        android:text="기록이 완료되었습니다!"
        android:textColor="@color/gray3"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_review_complete"
        app:layout_constraintStart_toStartOf="@+id/img_review_complete"
        app:layout_constraintTop_toBottomOf="@+id/img_review_complete" />

    <Button
        android:id="@+id/btn_review_complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/orange2"
        android:fontFamily="@font/notosanskr"
        android:includeFontPadding="false"
        android:insetTop="0dp"
        android:text="확인"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/txt_reivew_complete" />

</androidx.constraintlayout.widget.ConstraintLayout>