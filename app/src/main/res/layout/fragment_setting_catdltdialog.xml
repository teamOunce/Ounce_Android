<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cardview_dialog"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_box"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_bold"
            android:gravity="center"
            android:padding="10dp"
            android:text="정말 지우시겠어요?"
            android:textColor="@color/gray_three"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dialog_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_regular"
            android:gravity="center"
            android:text="유일한 고양이에요.\n저장했던 기록들도 함께 사라져요."
            android:textColor="@color/gray_two"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/dialog_title"
            app:layout_constraintStart_toStartOf="@id/dialog_title"
            app:layout_constraintTop_toBottomOf="@id/dialog_title" />


        <TextView
            android:id="@+id/settingcare_dialog_yes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_regular"
            android:gravity="center"
            android:padding="10dp"
            android:text="네"
            android:textColor="@color/gray_three"
            app:layout_constraintEnd_toStartOf="@+id/settingcare_dialog_no"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dialog_subtitle" />

        <TextView
            android:id="@+id/settingcare_dialog_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/orange"
            android:fontFamily="@font/notosans_regular"
            android:gravity="center"
            android:padding="10dp"
            android:text="잘못 눌렀어요"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/settingcare_dialog_yes"
            app:layout_constraintTop_toBottomOf="@id/dialog_subtitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>