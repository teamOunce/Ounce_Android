<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/setting_opensource_name"
        android:textSize="16dp"
        android:fontFamily="@font/notosans_bold"
        android:textColor="@color/gray_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/setting_opensource_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:linksClickable="true"
        android:autoLink="web"
        android:textColorLink="@color/hyperlink"
        app:layout_constraintStart_toStartOf="@id/setting_opensource_name"
        app:layout_constraintTop_toBottomOf="@id/setting_opensource_name" />
    <TextView
        android:id="@+id/setting_opensource_copyright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosans_regular"
        android:textSize="13dp"
        android:textColor="@color/copyright"
        app:layout_constraintTop_toBottomOf="@id/setting_opensource_link"
        app:layout_constraintStart_toStartOf="@id/setting_opensource_link"
        />



</androidx.constraintlayout.widget.ConstraintLayout>